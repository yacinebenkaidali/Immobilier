<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragment.DetailsFragment"
                                                   android:background="#00951F1F">


    <ImageView
            android:src="@drawable/ic_account"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/imageView3" android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageSlider" android:background="#008E8181"/>
    <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/users_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:fontFamily="casual"
            android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView4" app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" style="@style/TextStyle" android:background="#008E8181"/>
    <ImageView
            android:src="@drawable/ic_phone"
            android:layout_width="80dp"
            android:layout_height="80dp" android:id="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2" android:layout_marginTop="8dp"
            android:background="#008E8181"/>
    <TextView
            android:id="@+id/users_phone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/users_name" app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="aahaldasdja" app:layout_constraintVertical_bias="1.0" style="@style/TextStyle"
            android:background="#008E8181"/>
    <com.smarteist.autoimageslider.SliderView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageSlider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:src="@drawable/ic_home_black_24dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="#008E8181"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/user_type"
            app:layout_constraintTop_toBottomOf="@+id/users_phone" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            style="@style/TextStyle" android:background="#008E8181"/>
</androidx.constraintlayout.widget.ConstraintLayout>