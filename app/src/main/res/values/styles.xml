<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LargeDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="LargeLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="MediumDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="MediumLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>

    <style name="SmallDark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="SmallLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_light</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>

    <style name="LargeDarkBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="LargeLightBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="MediumDarkBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="MediumLightBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>

    <style name="SmallDarkBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="SmallLightBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="SectionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="FieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="IconButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextButtonAccent" parent="MediumDarkBold">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:text">Fiche Technique</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextButtonDark">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>


</resources>
